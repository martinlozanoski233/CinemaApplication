@model Cinema.Domain.DTO.AddToShoppingCardDto

@{
    ViewData["Title"] = "Add to Shopping Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Add selected ticket to your shopping cart!</h3>

<div class="row mt-4">
    <div class="col-md-4 m-auto">
        <form method="post" asp-action="AddTicketToCard">
            <input type="hidden" asp-for="SelectedTicketId" />
            <div class="form-group">
                <label asp-for="SelectedTicket.MovieTitle"></label>
                <input disabled asp-for="SelectedTicket.MovieTitle" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input type="number" asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
